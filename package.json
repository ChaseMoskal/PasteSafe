{
  "name": "pastesafe",
  "private": true,
  "description": "Instant web cryptography",
  "scripts": {
    "build": "rimraf build && run-p build-scripts build-styles && echo Build complete.",
    "build-scripts": "tsc && browserify build/main.js | uglifyjs -m > build/main.bundle.js",
    "build-styles": "run-p build-styles-layout build-styles-vibes",
    "build-styles-layout": "node-sass --source-map true source/style/layout.scss build/style/layout.css",
    "build-styles-vibes": "node-sass --source-map true source/style/vibes.scss build/style/vibes.css",
    "start": "http-server -p 8080"
  },
  "author": "Chase Moskal",
  "license": "ISC",
  "dependencies": {
    "pcrypto": "^0.5.2"
  },
  "devDependencies": {
    "browserify": "^14.1.0",
    "http-server": "^0.9.0",
    "node-sass": "^4.5.1",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "typescript": "^2.2.1",
    "uglify-js": "^2.8.16"
  }
}
