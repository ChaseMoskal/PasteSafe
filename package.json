{
  "name": "pastesafe",
  "version": "0.3.0",
  "description": "Web crypto app",
  "scripts": {
    "setup": "npm i -g typescript && npm i -g webpack && npm i -g bower",
    "compile": "tsc && webpack ./build/script.js build/script.bundle.js",
    "sass": "node-sass --source-map true style.scss build/style.css",
    "sass-watch": "node-sass --source-map true --watch style.scss build/style.css",
    "build": "rimraf build && (npm run compile & npm run sass) && echo Build complete."
  },
  "author": "Chase Moskal",
  "license": "MIT",
  "devDependencies": {
    "node-sass": "^3.4.2",
    "rimraf": "^2.5.1"
  }
}
