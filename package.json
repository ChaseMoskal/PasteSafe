{
	"name": "pastesafe-web-app",
	"private": true,
	"version": "0.12.0-dev",
	"description": "instant web cryptography. encrypt in as you type in realtime. share and decrypt ciphertext.",
	"scripts": {
		"prepare": "run-p build",
		"build": "rimraf dist && run-p build-scripts build-styles && echo Build complete.",
		"build-scripts": "tsc && run-p bundle-main bundle-script",
		"bundle-main": "browserify dist/main.js | uglifyjs -m > dist/main.bundle.js",
		"bundle-script": "browserify dist/script.js | uglifyjs -m > dist/script.bundle.js",
		"build-styles": "run-p build-styles-layout build-styles-vibes build-styles-main",
		"build-styles-layout": "node-sass --source-map true source/style/layout.scss dist/style/layout.css",
		"build-styles-vibes": "node-sass --source-map true source/style/vibes.scss dist/style/vibes.css",
		"build-styles-main": "node-sass --source-map true source/style.scss dist/style.css",
		"start": "http-server -p 8080"
	},
	"author": "Chase Moskal",
	"license": "ISC",
	"dependencies": {
		"mobx": "3.3.0",
		"mobx-react": "4.3.2",
		"pcrypto": "0.5.5",
		"react": "15.6.1",
		"react-dom": "15.6.1"
	},
	"devDependencies": {
		"@types/react": "16.0.5",
		"@types/react-dom": "15.5.4",
		"browserify": "14.4.0",
		"http-server": "0.10.0",
		"node-sass": "4.5.3",
		"npm-run-all": "4.1.1",
		"rimraf": "2.6.2",
		"typescript": "2.5.2",
		"uglify-js": "3.1.0"
	}
}
